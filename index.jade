	script#template(type="text/x-jquery-tmpl").
		<div class="list-block ${name}">
			<ul>
				{{each links}}<li>${$value}</li>{{/each}}
			</ul>
		</div>
	script(type='text/javascript').
		$('.list-item').click(function(){
			$('.list .list-item').removeClass('active');
			$(this).addClass('active');
			$data = $(this).attr('data-list');
			$data = $.parseJSON($data);
			$n = $(this).prevAll().length;
			$n = $n-$n%4+4-1;
			//- console.log($n-$n%4+4);
			if($n == $('.list').attr('anchor')) {
				$('.list .list-block').remove();
				$('#template').tmpl($data).insertAfter( $('.list .list-item:eq('+$n+')') );
			} else {
				$('.list .list-block').slideUp(function(){$(this).remove()});
				$('#template').tmpl($data).insertAfter( $('.list .list-item:eq('+$n+')') ).hide().slideDown();
			}
			$('.list').attr('anchor', $n);
			//- console.log(	$('.list').children(':eq('+$n+')') );
		});
		//- $('.payment').clone().appendTo('.list');